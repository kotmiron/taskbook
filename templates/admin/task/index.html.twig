{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_task_index' %}

{% block main %}
    <h1>Список задач</h1>

    <table class="table table-striped table-middle-aligned">

        <tbody>
            <thead>
                <tr>
                    <th scope="col">Задача</th>
                    <th scope="col">Поручено</th>
                    <th scope="col">Статус</th>
                    <th scope="col"></th>
                </tr>
            </thead>
        {% for task in tasks %}
            <tr>
                <td>{{ task.content }}</td>
                <td>{{ task.user.username }}</td>
                <td>
                    {% if (task.status) %}
                        <span class="badge badge-success">выполнено</span>
                    {% else %}
                        <span class="badge badge-danger">не выполнено</span>
                    {% endif %}
                </td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_task_edit', {id: task.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> редактировать
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">нет записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
